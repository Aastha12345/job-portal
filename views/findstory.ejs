<%- include('partials/header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>  

    <title>Document</title>

    
</head>
<body style="font-family:serif;letter-spacing: 1px;background-color:#f0f0f0;">

    <div class="container" style="padding-left:200px;">
        <% storys.forEach(story=> {%>

            <div class ="col-md-10">
                <% storys.forEach(story=> {%>
                    <div style= "background-color:white;height:230px;padding-left:100px;margin:2vw;">
                    <div class="col-md-10 col-sm-12">
                            <h3><%= story.title %></h3>
                            <p><b>COMPANY: </b>  <%= story.company %></p>
                            <p><b>CATEGORY: </b> <%= story.category %></p>
                            <p><b>LOCATION: </b> <%= story.location %></p>
                            <p><b>PAYSCALE: </b> <%= story.payscale %></p>
                            <a href='/story/show/<%=story._id %>'><button class="btn btn-primary">MORE INFO</button></a>
                        </div>
                    </div>
                <% }) %>
            </div>

        <% }) %>
    </div>
</body>
</html>

<%- include('partials/footer.ejs') %>