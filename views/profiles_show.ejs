<%- include('partials/header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">   
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>  

    <style>
        html, body {
            min-height: 100%;
        }

        @media only screen and (max-width:500px) {
        /* For mobile phones: */
        img{
        height:50%;
        width:80%;
        }
        .btn
        {
            padding:0;
        }
    }
    </style>
</head>
<body style="background-color:#f0f0f0">
    
    <div class="container" style="margin-top:5vw; margin-bottom:2vw; text-align:left;">
        <% users.forEach(user=> {%>
            <div style= "background-color:white;height:330px;margin:2vw;">
                <img src="/uploads/profile/<%=user.photo%>" onerror="this.onerror=null; this.src='/image404.jpg'" style="float:left;" width="40%" height="100%">
                <div class="col-md-4 col-sm-12">
                    <br>
                    <br>
                    <br>
                    <p><b>NAME:</b> <br> <%= user.name %></p>
                    <p><b>EMAIL:</b> <br> <%= user.email %></p>
                    <p><b>PHONE - NUMBER</b> <br> <%= user.phonenumber %></p>
                </div>
            </div>
            <% }) %>
        </div>
</body>
</html>

<%- include('partials/footer.ejs') %>