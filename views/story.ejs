<%- include('partials/header.ejs') %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
    <title>Story</title>

    <style>
        label{
            padding-top:10px;
        }
        .inputfull {
            width: 100%;
            padding: 5px;
            display: inline-block;
            border: none;
            background: #f1f1f1;
        }
        input:focus {
            border-color:grey;
            outline:none;
        }
        .required
        {
            color:red;
        }
    </style>

</head>


<body style="background-color:#f0f0f0">

    <div class="container text-left" style="background-color:white">

        <p style="background-color:red;">
            <%= typeof msg !='undefined'?msg:'' %>
        </p>
        
		<h3>    MY Blog      </h3>        
        
        <form action="/story" method="POST">
            <label for="title">Title<span class="required">*</span></label>
            <input name="title" class="inputfull"></input>

            <label for="company">Company<span class="required">*</span></label>
            <input name="company" class="inputfull"></input>

            <label for="category">Category<span class="required">*</span></label><br>
            <input type="checkbox" name="category" value="Agriculture"> Agriculture<br />
            <input type="checkbox" name="category" value="Clothing"> Clothing<br />
            <input type="checkbox" name="category" value="Construction"> Construction<br />
            <input type="checkbox" name="category" value="Manufacturing"> Manufacturing<br />
            <input type="checkbox" name="category" value="Mining"> Mining<br />


            <label for="location">Location<span class="required">*</span></label><br />
            <input type="checkbox" name="location" value="LocationA"> LocationA<br />
            <input type="checkbox" name="location" value="LocationB"> LocationB<br />
            <input type="checkbox" name="location" value="LocationC"> LocationC<br />
            <input type="checkbox" name="location" value="LocationD"> LocationD<br />
            <input type="checkbox" name="location" value="LocationE"> LocationE<br />


            <label for="payscale">Pay Scale<span class="required">*</span></label>
            <input name="payscale" class="inputfull"></input>

            <label for="contact">Contact Number<span class="required">*</span></label>
            <input name="contact" class="inputfull"></input>

            <label for="apply">Apply Link<span class="required">*</span></label>
            <input name="apply" class="inputfull"></input>
    
            <label for="description">Description<span class="required">*</span></label>
            <textarea rows="5" cols="100" class="inputfull" name="description"></textarea>
            
            <div>
            <a><button class="btn btn-primary">SAVE</button></a>
            <p>Fields marked <span class="required">*</span> are mandatory</p>
            </div>
        </form>
    </div>
    
</body>
</html>

<%- include('partials/footer.ejs') %>