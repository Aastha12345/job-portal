<%- include('partials/header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">   
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>  

    <title>Index</title>
    <style>
        html, body {
            min-height: 100%;
        }

        @media only screen and (max-width:500px) {
        /* For mobile phones: */
        img{
        height:50%;
        width:80%;
        }
        .btn
        {
            padding:0;
        }
}

    </style>
</head>
<body style="background-color:#f0f0f0">
        <div class="container text-center" style="font-family:serif;letter-spacing: 0.20vw;">
            <h1 style="font-size:3vw;">JOB-PORTAL</h1>
            
            <% if(currentUser){ %>
                <% if(currentUser.category == "employer") {%>
                    <div class="text-center">
                        <a href='/story' ><button class="btn btn-info">Add New JOB</button></a>
                    </div>        
                <% } %>
            <% } %>

        </div> 

        <div class="container" style="margin-top:5vw; margin-bottom:2vw; text-align:left;">

            <div class = "row">
                <div class ="col-md-2">

                    <form action="/story/filter" method='GET'>
                        <h3>Filter</h3>
                        <h4>
                        <label for="category">Category</label><br>
                        <input type="checkbox" name="category" value="Agriculture"> Agriculture<br />
                        <input type="checkbox" name="category" value="Clothing"> Clothing<br />
                        <input type="checkbox" name="category" value="Construction"> Construction<br />
                        <input type="checkbox" name="category" value="Manufacturing"> Manufacturing<br />
                        <input type="checkbox" name="category" value="Mining"> Mining<br />
                        <br>
                        <br>
                        <label for="location">Location</label><br />
                        <input type="checkbox" name="location" value="LocationA"> LocationA<br />
                        <input type="checkbox" name="location" value="LocationB"> LocationB<br />
                        <input type="checkbox" name="location" value="LocationC"> LocationC<br />
                        <input type="checkbox" name="location" value="LocationD"> LocationD<br />
                        <input type="checkbox" name="location" value="LocationE"> LocationE<br />
                        <br>                            
                        </h4>
                    <button>FILTER</button>
                    </form>          
                </div>

                <div class ="col-md-8">
                    <% storys.forEach(story=> {%>
                        <div style= "background-color:white;height:230px;padding-left:100px;margin:2vw;">
                        <div class="col-md-10 col-sm-12">
                                <h3><%= story.title %></h3>
                                <p><b>COMPANY: </b>  <%= story.company %></p>
                                <p><b>CATEGORY: </b> <%= story.category %></p>
                                <p><b>LOCATION: </b> <%= story.location %></p>
                                <p><b>PAYSCALE: </b> <%= story.payscale %></p>
                                <a href='/story/show/<%=story._id %>'><button class="btn btn-primary">MORE INFO</button></a>
                            </div>
                        </div>
                    <% }) %>
                </div>
        </div>
</body>
</html>

<%- include('partials/footer.ejs') %>