<%- include('partials/header.ejs') %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
    <style>
        label{
            padding-top:10px;
        }
        .fullInput {
            border-width: 0 0 0.5px;
            width: 100%;
            padding: 5px;
            display: inline-block;
            border: none;
            background: #f1f1f1;
        }
        input:focus {
            border-color:grey;
            outline:none;
        }
        .required
        {
            color:red;
        }
    </style>
    <title>Register</title>
</head>


<body style="background-repeat:no-repeat;background-image:url(/registerimage.jpg);background-size: 100% 100%;background-size:cover;font-family:'Times New Roman', serif;letter-spacing:0.5px;font-size:medium">

    <p style="background-color:#e3dfc8;text-align: center;">
        <%= typeof msg !='undefined'?msg:'' %>
    </p>
    <div class="container text-left" style="border:0.5px solid black;background-color:white;width:55%">       

        <h3 class="text-center">    REGISTER      </h3>
        <p>Fields marked <span class="required">*</span> are mandatory</p>
        <hr>
        <form action="/register" method="POST" enctype="multipart/form-data">
            <label for="name">Name<span class="required">*</span></label>
            <input type="text" name="name" class ="fullInput" placeholder="Name">
            
            <label for="username">Username<span class="required">*</span></label>
            <input type="text" name="username"  id="usernameid"  class ="fullInput"  placeholder="Username">
            
            <label for="password" >Password<span class="required">*</span></label>
            <input type="text" name="password"  class ="fullInput" placeholder="Password">
            
            <label for="myImage">Image<span class="required">*</span>&nbsp&nbsp&nbsp&nbsp&nbsp(Allowed Formats are jpeg,jpg,png and gif)</label>
            <input name="myImage"  class ="fullInput" type="file">
            
            <label for="email" >Email<span class="required">*</span></label>
            <input type="text" name="email"  class ="fullInput" placeholder="email">
            
            <label for="phonenumber">Phone Number<span class="required">*</span></label>
            <input type="number" name="phonenumber"  class ="fullInput" placeholder="Phone Number">

            <label for="Category" >Category<span class="required">*</span></label><br>
            <input type="radio"  name="category" id="looking for job" value="looking for job">
            <label for="looking for job">looking for job</label><br>
            <input type="radio" id="employer" name="category" value="employer">
            <label for="employer">Employer</label><br>

            <br>
            <br>
            
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
    
</body>
</html>
